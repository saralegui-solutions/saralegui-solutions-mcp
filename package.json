{
  "name": "saralegui-mcp-server",
  "version": "2.1.0",
  "description": "AI-Integrated MCP Server with intelligent text interface and real-time learning capabilities for Saralegui Solutions",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "db:init": "node database/init_sqlite.js",
    "db:reset": "rm -f database/*.db && npm run db:init",
    "claudia": "node claudia/index.js",
    "claudia:text": "node claudia/text_interface.js",
    "chat": "node claudia/text_interface.js",
    "test:mic": "node test/test_microphone.js",
    "setup:netsuite": "node config/netsuite_sandbox.js",
    "monitor": "node monitoring/dashboard.js",
    "test": "node test/test_learning_engine.js",
    "test:verbose": "node test/test_learning_engine.js --verbose",
    "test:quick": "node test/test_learning_engine.js --quick",
    "test:text": "node test/test_text_interface.js",
    "test:env": "node test/test_environment.js",
    "test:wsl": "node test/test_wsl_compatibility.js",
    "test:e2e": "node test/test_e2e.js",
    "test:new": "node test/test_all_new.js",
    "test:enhanced": "node test/test_enhanced_learning.js",
    "test:enhanced:quick": "node scripts/test_enhanced_learning.js",
    "demo:learning": "node demo/enhanced_learning_demo.js",
    "test:all": "npm test && npm run test:new",
    "setup": "npm install && npm run db:init"
  },
  "keywords": [
    "mcp",
    "ai",
    "learning",
    "automation",
    "claude",
    "voice",
    "whisper"
  ],
  "author": "Saralegui Solutions LLC",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "chalk": "^5.3.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0",
    "oauth-1.0a": "^2.2.6",
    "openai": "^4.24.0",
    "ora": "^8.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
